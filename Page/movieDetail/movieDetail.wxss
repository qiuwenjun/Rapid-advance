.movie_video{
    height: 350rpx;
    background: #000
}
.movie_video video{
    width: 100%;
    height: 100%;
}
.title{
    font-size: 45rpx;
    color: #000;
    padding: 20rpx 30rpx 0rpx;
    display: block
}
.title text{
    font-size: 28rpx;
    color: #ffb712;
    margin-left: 20rpx
}
.movie_details{
    display: flex;
    height: 360rpx;
    padding: 0 0 0 30rpx
}
.movie_details .introduce{
    flex: 1;
    padding-top: 20rpx
}
.movie_details .introduce .start>.Starts{
    display: inline-block;
    width: 25rpx;
    height: 25rpx;
    margin: 0 5rpx;
    background: url(data:image/png;base64,) no-repeat center center;
    background-size: 100% 100%;
}
.movie_details .introduce .start>.Starts.active{
    background: url(data:image/png;base64,) no-repeat center center;
    background-size: 100% 100%;
}
.movie_details .introduce .start>text:last-child{
    font-size: 30rpx;
    color: rgb(163, 156, 156);
    margin-left: 20rpx;
}
.movie_details .introduce .not_release{
    font-size:30rpx;
    color: rgb(163, 156, 156); 
}
.movie_details .introduce .workers{
    margin-top: 20rpx;
    font-size: 30rpx;
    color: #000
}
.movie_details .introduce .workers view{
    margin: 10rpx 0;
}
.movie_details .img{
    flex: 1;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}
.movie_details image{
    width: 220rpx;
    height: 300rpx;
}
.synopsis{
    padding: 0 20rpx;
   
}
.synopsis label{
    display:block;
    font-size:36rpx;
    color: #999;
    margin-bottom: 15rpx;
}
.synopsis view{
    display:block;
    color: rgb(31, 30, 30);
    text-align: justify;
    font-size: 30.5rpx;
    line-height: 1.5
}
.synopsis view:first-of-type text{
  display: inline;
   color: greenyellow;
   font-size: 30.5rpx;
}
.synopsis view:last-of-type{
    font-size: 30rpx;
}
.filmmaker{
    margin: 20rpx 0rpx;
    padding: 0 20rpx;
}
.filmmaker label{
    font-size: 36rpx;
    color: #999;
    margin-bottom: 20rpx;
    display: block;
}
.filmmaker scroll-view{
    width: 100%;
    white-space: nowrap
}
.filmmaker scroll-view view{
    width: 260rpx;
    height: 100%;
    display: inline-block;
    margin-left: 10rpx;
}
.filmmaker scroll-view view image{
    width: 100%;
    height: 320rpx;
}
.filmmaker scroll-view view text{
    font-size: 32rpx;
    color: #999;
    display: block;
    text-align: center;
    margin: 10rpx 0;
}
.filmmaker scroll-view view text:first-of-type{
    color: #000;
    margin-left: 0rpx;
    font-size: 34rpx
}
.comments{
    padding: 0 20rpx;
    margin: 20rpx auto
}