page{
    height: 100%;
}
#index{
  height: 100%;
  display: flex;
  flex-direction: column;
}
.header{
  height: 80rpx;
  background: #2196F3;
  margin-bottom: 30rpx;
  box-shadow: 0 0 10rpx rgba(0,0,0,0.4);
  display: flex;
}
.header>view:first-child{
  flex: 1;
  height: 100%;
  overflow: hidden;
}
.header>view:first-child>scroll-view{
  white-space: nowrap;
  height: 100%;
  box-shadow:inset 0rpx 0rpx 8rpx rgba(0,0,0,0.4)
}
.header>view:first-child>scroll-view text{
  display: inline-block;
  height: 100%;
  margin: 0 20rpx;
  color: #fff;
  line-height: 3;
  font-size: 30rpx;
}
.header>view:first-child>scroll-view text.active{
  color: rgb(124, 33, 243)
}
.header>view:last-child{
  width: 80rpx;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 46rpx;
}
.scroll-view{ 
  flex: 1;
  height: 0rpx
}
.movie_list{
  display: flex;
  flex-direction:row;
  flex-flow: wrap;
  justify-content:space-between;
}
.movie_list .item-list{
  width: 48%;
}
.movie_list .item-list image{
  width: 100%;
  height: 480rpx
}
.movie_list .item-list view{
 text-align: center;
 padding: 5rpx 10rpx 10rpx;
}
.movie_list .item-list  .movie_name{
  font-size: 30rpx;
  color: rgb(36, 35, 35);
}
.movie_list .item-list  .rating{
  color: #f00;
  font-size: 26rpx;
  display: flex;
  justify-content: center
}
.movie_list .item-list  .rating-start{
  margin-right: 15rpx
}
.movie_list .item-list  .rating-start text{
    display: inline-block;
    width: 25rpx;
    height: 25rpx;
    margin: 0 5rpx;
    background: url(data:image/png;base64,) no-repeat center center;
    background-size: 100% 100%;
}
.movie_list .item-list .rating-start text.active{
  background: url(data:image/png;base64,) no-repeat center center;
  background-size: 100% 100%;
}
.movie_list .item-list  .movie_label{
  font-size: 24rpx;
  color: #999;
}
.loding{
  padding: 30rpx 0;
  display: flex;
  justify-content: center;
}
.loding view{
   width:15rpx;
   height: 60rpx;
   background: #eee;
   border-radius: 20rpx;
   margin: 0 10rpx;
   animation: loading 0.6s linear infinite alternate both;
   transform-origin: center center;
}
.loding view:nth-child(2){
    animation-delay: 0.2s
}
.loding view:nth-child(3){
    animation-delay: 0.4s
}
.loding view:nth-child(4){
    animation-delay: 0.6s
}
@keyframes loading{
  0%{
     transform: scale(0.5)
  }
  100%{
     transform: scale(2)
  }
}